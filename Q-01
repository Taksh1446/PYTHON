import random
odd_list = [random.randrange(1, 100, 2) for _ in range(5)]
even_list = [random.randrange(0, 100, 2) for _ in range(4)]
print("Original odd list:", odd_list)
print("Even list:", even_list)
odd_list[2] = even_list
print("Odd list after replacing 3rd element with even list:", odd_list)
flat_list = []
for item in odd_list:
    if isinstance(item, list):
        flat_list.extend(item)
    else:
        flat_list.append(item)
flat_list.sort()
print("Flattened and sorted list:", flat_list)
